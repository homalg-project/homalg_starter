#!/bin/bash

. ${DIR}/init_homalg_starter

## This part will be tranferred to a new file

checker=""

for mod in ${homalg_modules}; do
  X=$(md5sum ${package_directory}/${mod}/PackageInfo.g | sed 's/ //g')
  Y=$(cat checksums/${mod}PackageInfo.checksum | sed 's/ //g')
  if [ "$X" != "$Y" ]
    then
    checker="true"
    ##change this position.
    echo $X > checksums/${mod}PackageInfo.checksum
  fi
done

if [ $checker ]
  then
  gap -r -R <<EOF
LoadPackage("io");
##This needs to be done better
xx:="${homalg_modules}";
xx:=SplitString(xx," ");
for i in xx do
  LoadPackage( i );
od;
??blablfdfhskhks
function() local a; for a in NamesGVars() do if ISB_GVAR(a) then
VAL_GVAR(a); fi;od;end;
last();
SaveWorkspace("checksums/homalg_workspace");
quit;
EOF
fi

